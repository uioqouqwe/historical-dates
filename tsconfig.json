{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "experimentalDecorators": true,
    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "node",

    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,

    "skipLibCheck": true,
  },
  "include": ["src"]
}
